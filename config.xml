<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rockstartraders.mypseinfo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My PSE Info.</name>
    <description>
       A simple application to display PSE Data.
    </description>
    <author email="jamespaulespea@gmail.com" href="https://github.com/rockstartraders">      
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
              <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#26547C" />
        <preference name="StatusBarDefaultScrollToTop" value="false" />
        <icon src="icon/pse_info.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
